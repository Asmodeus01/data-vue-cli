#!/usr/bin/env node
// 交互式命令行
const inquirer = require('inquirer')
const downloadTemplate = require('../utils/downloadTemplate')
const AppUrl = require('../utils/AppUrl')

const question = [{
  name: "appName",
  type: 'input',
  message: "请输入项目名称",
  validate (val) {
    if (val === '') {
      return 'Name is required!'
    } else {
      return true
    }
  }
},
{
  type: 'list',
  message: '请选择UI框架',
  name: 'UI',
  choices: [
    "Element",
    "Vant",
    "Ant Design Vue"
  ]
}
]

branchObj = {
  "Element": 'element',
  "Vant": 'vant',
  "Ant Design Vue": 'ant-design-vue'
}


inquirer
  .prompt(question)
  .then(answers => {
    // 回调函数，answers 就是用户输入的内容，是个对象
    console.log('answers', answers);
    downloadTemplate({
      appName: answers.appName,
      url: AppUrl.vue,
      branch: branchObj[answers.UI]
      // branch: ''
    })
  })
  .catch((error) => {
    console.log('err', error);
    if (error.isTtyError) {
      // Prompt couldn't be rendered in the current environment
      console.error(error);
    } else {
      // Something else went wrong
    }
  });